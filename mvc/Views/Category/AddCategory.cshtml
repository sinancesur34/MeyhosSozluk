
@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h1>Yeni Kategori Ekleme Sayfası</h1>
<br />
<form class="form-group" method="post">
    @* method="post"  bu method post işlemi ne zaman çalışsın diye soruyor aslında .
        buradaki işlemler butona tıkladıgımda gerçekleşecek.   *@
    <input type="text" placeholder="Kategori Adı" name="CategoryName" />
    <br /><br />

    <label for="selectID">Kurs Seçiniz</label><br>
    <select name="categoryDescription" >
        <option value="html">HTML</option>
        <option value="css">CSS</option>
        <option value="sass">SASS</option>
        <option value="javascript">JAVASCRIPT</option>
        <option value="bootstrap">BOOTSTRAP</option>
    </select>





   
    <br /><br />
    <button class="btn btn-primary">Ekle</button>
</form>

